<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="1dp" android:top="3dp">
                <shape>
                    <solid android:color="@color/dividerColorDark" />
                    <corners android:radius="3dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="#50DCDCDC" />
                    <corners android:radius="3dip" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <corners android:radius="3dip" />
                    <solid android:color="#80FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>