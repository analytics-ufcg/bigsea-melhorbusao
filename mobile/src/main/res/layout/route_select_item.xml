<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rota_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/route_select_button">

            <LinearLayout
                android:id="@+id/bus_icon_layout"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/bus_icon"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/take_bus_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/bus_icon_layout">

                    <TextView
                        android:id="@+id/numero_rota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        />

            </LinearLayout>
        </RelativeLayout>


</LinearLayout>
