<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:actionBarStyle">@style/ActionBarWidgetTheme</item>
    </style>

    <style name="AppTheme.Form" parent="Base.Theme.AppCompat">
        <item name="colorControlNormal">@color/dividerColorDark</item>
    </style>


    <!-- Action bar style-->
    <style name="ActionBarWidgetTheme" parent="@android:style/Theme.Holo">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTagTakeBus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SpinnerTakeBus">
        <item name="android:layout_marginLeft">@dimen/margin_take_bus</item>
        <item name="android:layout_marginRight">@dimen/margin_take_bus </item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>

    </style>

    <style name="SpinnerStopTime">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="bottom_bar_text">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
